generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Board {
  id       Int    @id @default(autoincrement())
  title    String
  category String
  author   String
  cards    Card[]
}

model Card {
  id          Int    @id @default(autoincrement())
  boardId     Int
  title       String
  description String
  author      String
  gifUrl      String
  upvoteCount Int
  board       Board  @relation(fields: [boardId], references: [id])
}
